<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="480.0" prefWidth="780.0"
            styleClass="front-page" stylesheets="@style.css"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.anactual_javafx.HelloController">

   <children>
      <HBox prefHeight="60.0" prefWidth="780.0">
         <children>
            <ImageView fitHeight="58.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@logo.png"/>
               </image>
            </ImageView>

            <HBox alignment="TOP_RIGHT" prefHeight="60.0" prefWidth="727.0" spacing="30.0">
               <children>

                  <!-- Sign-Up Button -->
                  <Button fx:id="btnSignUp"
                          onAction="#handleSignUp"
                          alignment="TOP_RIGHT"
                          mnemonicParsing="false"
                          prefHeight="0.0"
                          prefWidth="106.0"
                          style="-fx-background-color: transparent;"
                          text="Sign up">
                     <font>
                        <Font size="21.0"/>
                     </font>
                     <textFill>
                        <LinearGradient endX="1.0" endY="1.0">
                           <stops>
                              <Stop>
                                 <color>
                                    <Color red="0.8700000047683716"
                                           green="0.6003000140190125"
                                           blue="0.8130375146865845"/>
                                 </color>
                              </Stop>
                              <Stop offset="1.0">
                                 <color>
                                    <Color red="1.0" green="1.0" blue="1.0"/>
                                 </color>
                              </Stop>
                           </stops>
                        </LinearGradient>
                     </textFill>
                  </Button>

                  <!-- Log-In Button -->
                  <Button fx:id="btnLogIn"
                          onAction="#handleLogIn"
                          alignment="TOP_RIGHT"
                          mnemonicParsing="false"
                          prefHeight="51.0"
                          prefWidth="94.0"
                          style="-fx-background-color: transparent;"
                          text="Log in"
                          textAlignment="CENTER">
                     <font>
                        <Font size="20.0"/>
                     </font>
                     <textFill>
                        <LinearGradient endX="1.0" endY="1.0">
                           <stops>
                              <Stop>
                                 <color>
                                    <Color red="0.8700000047683716"
                                           green="0.6003000140190125"
                                           blue="0.8130375146865845"/>
                                 </color>
                              </Stop>
                              <Stop offset="1.0">
                                 <color>
                                    <Color red="0.8700000047683716"
                                           green="0.6003000140190125"
                                           blue="0.8595374822616577"/>
                                 </color>
                              </Stop>
                           </stops>
                        </LinearGradient>
                     </textFill>
                  </Button>

               </children>
            </HBox>
         </children>
      </HBox>
   </children>
</AnchorPane>